#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define FILAS 30
#define COLUMNAS 30

void llenarMatriz(int matriz[FILAS][COLUMNAS]) {
    int i, j;

    for (i = 0; i < FILAS; ++i) {
        for (j = 0; j < COLUMNAS; ++j) {
            matriz[i][j] = rand() % 10; 
        }
    }
}

void imprimirMatriz(int matriz[FILAS][COLUMNAS]) {
    int i, j;

    for (i = 0; i < FILAS; ++i) {
        for (j = 0; j < COLUMNAS; ++j) {
            printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }
}

void multiplicarMatrices(int matriz1[FILAS][COLUMNAS], int matriz2[FILAS][COLUMNAS], int resultado[FILAS][COLUMNAS]) {
    int i, j, k;

    for (i = 0; i < FILAS; ++i) {
        for (j = 0; j < COLUMNAS; ++j) {
            resultado[i][j] = 0;

            for (k = 0; k < FILAS; ++k) {
                resultado[i][j] += matriz1[i][k] * matriz2[k][j];
            }
        }
    }
}

int main() {
    srand((unsigned int)time(NULL));

    int matriz1[FILAS][COLUMNAS];
    int matriz2[FILAS][COLUMNAS];
    int resultado[FILAS][COLUMNAS];

    llenarMatriz(matriz1);
    llenarMatriz(matriz2);

    printf("Matriz 1:\n");
    imprimirMatriz(matriz1);

    printf("\nMatriz 2:\n");
    imprimirMatriz(matriz2);
    
	clock_t tic = clock();
	
    multiplicarMatrices(matriz1, matriz2, resultado);

    clock_t toc = clock();
    
    printf("\nResultado de la multiplicaciÃ³n:\n");
    imprimirMatriz(resultado);
	
	printf("Elapsed: %f segundos \n", (double)(toc - tic) / CLOCKS_PER_SEC);
	
    return 0;
}
